.header {
  width: 250px;
  position: fixed;
  top: 40px;
  left: 20px;
  
  h1 {
    font-size: 35px;
    margin: 0 0 5px 0;
  }
  
  h2 {
    font-size: 17px;
  }
  
  h2, a {
    color: nav-link-out-color;
    text-shadow: 0px 1px 0px #222222;
    transition: color 0.3s;
  }
  
  a:hover, a.selected {
    color: link-over-color;
  }

  ul {
    font-size: 13px;
    li {
      margin: 0 0 5px 0;
    }
    
    &.nav {
      margin: 20px 0;
    }
  }
  
}